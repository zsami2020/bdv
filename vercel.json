{
  "version": 2,
  "builds": [
    {
      "src": "api/api.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "*.php",
      "use": "vercel-php@0.7.3"
    }
  ],
  "routes": [
    // CSS
    {
      "src": "/assets/(.+\\.css)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "text/css",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    // JavaScript
    {
      "src": "/assets/(.+\\.js)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "application/javascript",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    // Im√°genes
    {
      "src": "/assets/(.+\\.png)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "image/png",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/assets/(.+\\.jpg|jpeg)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "image/jpeg",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/assets/(.+\\.webp)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "image/webp",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    // Favicon
    {
      "src": "/assets/(.+\\.ico)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "image/x-icon",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    // Fuentes
    {
      "src": "/assets/(.+\\.woff2)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "font/woff2",
        "Cache-Control": "public, max-age=31536000"
      }
    },
    // API
    {
      "src": "/api/(.*)",
      "dest": "/api/api.php"
    },
    // Catch-all
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
