{
  "version": 2,
  "builds": [
    {
      "src": "api/api.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "*.php",
      "use": "vercel-php@0.7.3"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.+\\.css)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/assets/(.+\\.js)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/assets/(.+\\.png)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "image/png"
      }
    },
    {
      "src": "/assets/(.+\\.ico)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "image/x-icon"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/api.php"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
