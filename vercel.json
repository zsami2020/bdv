{
  "version": 2,
  "builds": [
    {
      "src": "api/api.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "*.php",
      "use": "vercel-php@0.7.3"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "Content-Type": {
          ".css": "text/css",
          ".js": "application/javascript",
          ".png": "image/png",
          ".ico": "image/x-icon"
        }
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/api.php"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
