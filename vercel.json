{
  "version": 2,
  "builds": [
    {
      "src": "api/api.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "*.php",
      "use": "vercel-php@0.7.3"
    }
  ],
  "routes": [
    // 1. Archivos estáticos (MÁXIMA prioridad)
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": {
          ".css": "text/css",
          ".js": "application/javascript",
          ".png": "image/png",
          ".jpg": "image/jpeg",
          ".webp": "image/webp",
          ".ico": "image/x-icon",
          ".woff2": "font/woff2"
        }
      }
    },
    // 2. Rutas específicas
    {
      "src": "/byebb",
      "dest": "/byebb.php"
    },
    {
      "src": "/xerox/(.*)",
      "dest": "/xerox/index.php"
    },
    // 3. Catch-all (manejado por index.php)
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
